{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Walnut Border",
    "slug": "walnut-border",
	"blockTypes": [ "core/accordion" ],
	"styles": {
            "css": "& .wp-block-accordion-item { margin-top: 0; margin-bottom: 0; }",
            "spacing": {
                "blockGap": "0"
            },
            "border": {
                    "color": "#9f7462",
                    "style": "solid",
                    "width": "4px",
                    "radius": "10px"
                },
            "shadow": "var(--wp--preset--shadow--natural)",
            "elements": {
                "h3": {
                    "color": {
                       "text": "#0f2a7b"
                    },
                    "typography": {
                        "fontSize": "1.5rem",
                        "fontWeight": "600"
                    }
                }
            },
            "blocks": {
                "core/paragraph":{
                    "spacing": {
                        "padding": {
                            "left": "10px",
                            "right": "10px"
                        }
                    }
                },
                "core/accordion-panel": {
                    "color": {
                        "background": "var(--wp--preset--color--custom-light-yellow)"
                    },
                    "spacing": {
                        "margin": {
                            "top": "0px"
                        },
                        "padding":{
                            "top":"5px",
                            "bottom":"10px"
                        }
                    }
                },
                "core/accordion-heading":{
                    "color": {
                        "background": "#f0d584"
                    }
                }
            }
        }
    }